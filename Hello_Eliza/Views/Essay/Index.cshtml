@model List<Hello_Eliza.Models.Essay>
@{
    ViewData["Title"] = "Essays";
}

<div class="essay-index">
    <h1 class="glitch-text">// TRANSMISSIONS</h1>
    
    @if (Model.Count == 0)
    {
        <p class="no-essays">No essays found. The feed is silent.</p>
    }
    else
    {
        <ul class="essay-list">
            @foreach (var essay in Model)
            {
                <li class="essay-item">
                    <a href="/essays/@essay.Slug" class="essay-link">
                        <span class="essay-date">@essay.Date.ToString("yyyy.MM.dd")</span>
                        <span class="essay-title">@essay.Title</span>
                    </a>
                    @if (!string.IsNullOrEmpty(essay.Description))
                    {
                        <p class="essay-desc">@essay.Description</p>
                    }
                </li>
            }
        </ul>
    }
    
    <div class="back-link">
        <a href="/">‚Üê return to terminal</a>
    </div>
</div>

<style>
    .essay-index {
        max-width: 700px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
    
    .essay-index h1 {
        font-family: monospace;
        color: var(--neon-cyan, #0ff);
        margin-bottom: 2rem;
    }
    
    .essay-list {
        list-style: none;
        padding: 0;
    }
    
    .essay-item {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(0, 255, 255, 0.2);
    }
    
    .essay-link {
        display: block;
        text-decoration: none;
        transition: all 0.2s;
    }
    
    .essay-link:hover .essay-title {
        color: var(--neon-cyan, #0ff);
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
    }
    
    .essay-date {
        font-family: monospace;
        font-size: 0.85rem;
        color: var(--neon-purple, #a855f7);
        display: block;
        margin-bottom: 0.25rem;
    }
    
    .essay-title {
        font-size: 1.25rem;
        color: #eee;
        transition: all 0.2s;
    }
    
    .essay-desc {
        font-size: 0.9rem;
        color: #888;
        margin: 0.5rem 0 0 0;
        line-height: 1.4;
    }
    
    .no-essays {
        color: #666;
        font-style: italic;
    }
    
    .back-link {
        margin-top: 3rem;
    }
    
    .back-link a {
        color: var(--neon-purple, #a855f7);
        text-decoration: none;
        font-family: monospace;
    }
    
    .back-link a:hover {
        text-decoration: underline;
    }
</style>
