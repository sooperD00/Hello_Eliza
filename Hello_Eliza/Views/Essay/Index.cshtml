@model List<Hello_Eliza.Models.Essay>
@{ ViewData["Title"] = "Essays"; }
@{ ViewData["FooterType"] = "essay-index"; }

<div class="page-content essay-paper essay-index">
    <h1>// TRANSMISSIONS</h1>
    
    @if (Model.Count == 0)
    {
        <p class="no-essays">No essays found.</p>
    }
    else
    {
        <ul class="essay-list">
            @foreach (var essay in Model)
            {
                <li class="essay-item">
                    <a href="/essays/@essay.Slug" class="essay-link">
                        <span class="essay-date">@essay.Date.ToString("yyyy.MM.dd")</span>
                        <span class="essay-title">@essay.Title</span>
                    </a>
                    @if (!string.IsNullOrEmpty(essay.Description))
                    {
                        <p class="essay-desc">@essay.Description</p>
                    }
                </li>
            }
        </ul>
    }
    
    <div class="page-footer">
        <a href="/" class="back-link">‚Üê return to terminal</a>
    </div>
</div>
