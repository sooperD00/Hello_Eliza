@model Hello_Eliza.Models.Essay
@{ ViewData["Title"] = Model.Title; }
@{ ViewData["FooterType"] = "essay"; }

<main class="essay-page">
    <article class="essay-container">        
        <header class="essay-header">
            <div class="essay-header-row">
                <div>
                    <!-- date -->
                    <time class="essay-date">@Model.Date.ToString("yyyy.MM.dd")</time>
                    
                    <!-- title -->
                    <h1 class="essay-title">@Model.Title</h1>
                </div>
                <!-- nav -->
                @await Html.PartialAsync("_EssayNav")
            </div>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="essay-subtitle">@Model.Description</p>
            }
        </header>
        
        <div class="essay-content">
            @Html.Raw(Model.Content)
        </div>

        @await Html.PartialAsync("_EssayNav")
    </article>
</main>
