<!DOCTYPE html>
<html lang="en">
<head>
    <!-- hierarchy = later files override earlier ones -->
    <!-- fonts first convention -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hello_Eliza</title>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">  <!-- Google Font (just loads the font, no conflicts) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  <!-- Bootstrap (base) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    <!-- site.css (your overrides) -->
    <link rel="stylesheet" href="~/Hello_Eliza.styles.css" asp-append-version="true" />  <!-- Hello_Eliza.styles.css (scoped component styles) -->    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Ascii" asp-action="Input">Hello_Eliza</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ascii" asp-action="Input">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Ascii" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center mt-5 pb-3" style="color: #666677; font-size: 0.9em; font-family: 'Courier New', monospace;">
        © 2026 Hello_Eliza | No user data harvested, no ICE deployed, no Turing cops called |
        <a href="https://github.com/sooperD00/Hello_Eliza" style="color: #00ffff; text-decoration: none;">[ View Source ]</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
